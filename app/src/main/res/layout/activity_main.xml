<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Selamat Datang \n di Klasifikasi Penerimaan Bantuan"
            android:textSize="@dimen/textsize_header6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_cv_classification"
            android:layout_below="@id/main_title"
            style="@style/main_menu">git
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="@dimen/textsize_body1"
                android:text="Klasifikasi Data Baru"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_cv_list_classification"
            android:layout_below="@id/main_cv_classification"
            style="@style/main_menu">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="@dimen/textsize_body1"
                android:text="Daftar Klasifikasi"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_cv_about_app"
            android:layout_below="@id/main_cv_list_classification"
            style="@style/main_menu">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="@dimen/textsize_body1"
                android:text="Tentang Aplikasi"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>