<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".QuestionnaireActivity">

    <include
            android:id="@+id/qa_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/view_loading" />

    <androidx.cardview.widget.CardView
            android:id="@+id/qa_cv_questionnaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

        <TextView
                android:id="@+id/qa_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="180dp"
                android:textSize="@dimen/textsize_subtitle1"
                android:background="#FFF"
                tools:text="Judul Questionnaire" />

    </androidx.cardview.widget.CardView>

    <RadioGroup
            android:id="@+id/qa_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/qa_cv_questionnaire"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"/>

    <Button
            android:id="@+id/qa_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="LANJUT"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/textsize_button" />

</RelativeLayout>